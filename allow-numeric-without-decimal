//HTML

<input type="text" class=" form-control allownumericwithoutdecimal" name="" id="" placeholder="Phone">

//SCRIPT

$(".allownumericwithoutdecimal").on("keypress keyup blur",function (event) { 
$(this).val($(this).val().replace(/[^\d].+/, "")); if ((event.which < 48 || event.which > 57)) 
  { event.preventDefault(); }
});
